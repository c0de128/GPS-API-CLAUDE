# GPS Tracking App Environment Variables Template
# Copy this file to .env and replace the placeholder values with your actual keys

# OpenRouteService API Configuration
# Get your free API key from: https://openrouteservice.org/dev/#/signup
VITE_OPENROUTESERVICE_TOKEN=your_openrouteservice_api_key_here

# Admin API Key for managing the GPS API server
# Generate a secure random string for production use
# Example: openssl rand -base64 32
VITE_ADMIN_API_KEY=your_admin_api_key_here

# API Server Configuration (if running the included API server)
# Base URL for the GPS API server
VITE_API_BASE_URL=http://localhost:3001

# Development Settings
# Set to 'development' for local development, 'production' for deployment
NODE_ENV=development

# Database Configuration (if using the API server with database)
# DATABASE_URL=your_database_connection_string_here

# Security Settings
# JWT Secret for API authentication (generate a secure random string)
# JWT_SECRET=your_jwt_secret_here

# CORS Origins (comma-separated list of allowed origins)
# ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Rate Limiting
# Default rate limit for API requests (requests per minute)
# DEFAULT_RATE_LIMIT=100

# Logging Level
# Options: error, warn, info, debug
# LOG_LEVEL=info